{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@controllers/*": ["controllers/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@utils": ["utils"],
      "@hooks/*": ["hooks/*"],
      "@constants/*": ["constants/*"],
      "@navigations/*": ["navigations/*"]
    }
  }
}
